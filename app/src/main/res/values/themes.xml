<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KanBase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:colorBackground">@color/appBg</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accet</item>
        <item name="colorPrimaryContainer">@color/container</item>
        <item name="colorSecondaryContainer">@color/secondaryConteiner</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="popupMenuBackground">@drawable/bg_light_gray</item>

        <item name="materialAlertDialogTheme">@style/Base.Theme.DIALOG</item>
    </style>


    <style name="Base.Theme.ICON_TINT" parent="Base.Theme.KanBase">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Base.Theme.BUTTONTAGS_NEW" parent="Base.Theme.KanBase">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:backgroundTint">@color/container</item>
    </style>

    <style name="Base.Theme.BUTTONTAGS_SELECT" parent="Base.Theme.KanBase">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="Base.Theme.CHECKBOX" parent="Base.Theme.KanBase">
        <item name="android:background">@drawable/checkbox_selector</item>
    </style>

    <style name="Base.Theme.BGSMALL" parent="Base.Theme.KanBase">
        <item name="android:background">@drawable/bg_small_gray</item>
    </style>

    <style name="Base.Theme.NAVIGTIONVIEW" parent="Base.Theme.KanBase">
        <item name="android:background">@drawable/bg_nav_header</item>
    </style>

    <style name="Base.Theme.NAVIGATIONHEADER" parent="Base.Theme.KanBase">
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>

    <style name="Base.Theme.DIALOG" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/bg_config_white</item>
    </style>
    
    <style name="Base.Theme.CARD" parent="Base.Theme.KanBase">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Base.Theme.BOTTOMNAV" parent="Base.Theme.KanBase">
        <item name="backgroundTint">@color/lightGray2</item>
    </style>

    <style name="Base.Theme.BOTTOMNAVDIV" parent="Base.Theme.KanBase">
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_small_gray</item>
    </style>

    <style name="Theme.KanBase" parent="Base.Theme.KanBase" />

    <style name="Theme.KanBase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KanBase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KanBase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>