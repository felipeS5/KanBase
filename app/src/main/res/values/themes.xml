<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CheckPad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accet</item>
        <item name="colorPrimaryContainer">@color/container</item>
        <item name="colorSecondaryContainer">@color/secondaryConteiner</item>
        <item name="android:colorBackground">@color/appBg</item>
        <item name="popupMenuBackground">@drawable/bg_light_gray</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_small_gray</item>
    </style>

    <style name="Theme.CheckPad" parent="Base.Theme.CheckPad" />

    <style name="Theme.CheckPad.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CheckPad.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CheckPad.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>